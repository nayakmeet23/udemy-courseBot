{
  "name": "udemypy-course-scraper",
  "description": "Automated Udemy free course scraper and Telegram bot",
  "repository": "https://github.com/yourusername/udemypy-project",
  "keywords": ["python", "udemy", "scraper", "telegram", "bot"],
  "env": {
    "TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "CHANNEL_ID": {
      "description": "Telegram Channel ID",
      "required": true
    },
    "CHANNEL_LINK": {
      "description": "Telegram Channel Link",
      "required": true
    },
    "DATABASE_URL": {
      "description": "Database URL (PostgreSQL for Heroku)",
      "required": true
    },
    "PAGES_TO_SCRAPE": {
      "description": "Number of pages to scrape",
      "value": "3"
    },
    "FAST_MODE": {
      "description": "Enable fast mode",
      "value": "true"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ]
} 